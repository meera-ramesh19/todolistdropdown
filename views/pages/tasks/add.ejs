        /* Fitting Inputs Styling */
        
        .form-group {
            display: flex;
            flex-flow: row wrap;
            margin: 0 -1rem 1rem -1rem;
        }
        
        [class*="form-col"] {
            flex: 0 1 100%;
            padding: 0 1rem;
        }
        
        @media (min-width: 576px) {
            .form-col-4 {
                flex: 0 0 33.33333%;
                max-width: 33.33333%;
            }
            .form-col-8 {
                flex: 0 0 66.66667%;
                max-width: 66.66667%;
            }
            .offset-form-col-4 {
                margin-left: 33.33333%;
            }
        }
        
        input,
        textarea {
            display: block;
            width: 100%;
        }
        
        label,
        select {
            display: block;
            width: 100%;
            max-width: 100%;
        }
